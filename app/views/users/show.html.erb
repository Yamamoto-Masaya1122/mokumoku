<div class="card">
  <!-- Card header -->
  <div class="card-header">
    <h3 class="mb-0">プロフィール</h3>
  </div>
  <!-- Card body -->
  <div class="card-body">
    <div class="d-lg-flex align-items-center justify-content-between">
      <div class="d-flex align-items-center mb-4 mb-lg-0">
        <%= image_tag @user.decorate.avatar, class: 'avatar-xl rounded-circle' %>
      </div>
    </div>
    <div>
      <% if current_user.following?(@user) %>
        <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-danger" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class:"btn btn-success" %>
      <% end %>
    </div>
    <hr class="my-5">
    <div>
      <!-- profile -->
      <table class="table">
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:name)) %></th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:hobby)) %></th>
          <td><%= @user.hobby %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:profile)) %></th>
          <td><%= @user.profile %></td>
        </tr>
      </table>
    </div>
  </div>
</div>